
@{
    ViewData["Title"] = "TipoEquipo";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section PagePreTitle{

    <div class="col">
     <!-- Page pre-title -->
        <div class="page-pretitle">
            Mantenimiento
        </div>
        <h2 class="page-title">
            Tipo Equipos
        </h2>
    </div>

}

@section PageActions{


}

@(Html.DevExtreme().DataGrid<TSK.Models.Entity.TipoEquipo>()
    .DataSource(ds => ds.Mvc()
        .Controller("TipoEquipo")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .Key("IdTeq")
    )
    .Columns(columns => {
        columns.AddFor(m => m.IdTeq).Caption("ID").Width(50);
        columns.AddFor(m => m.IdEmp).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("TipoEquipo").LoadAction("EmpresasLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).GroupIndex(0).Caption("Empresa");
        columns.AddFor(m => m.TEquipo).Caption("Tipo Equipo");
        columns.AddFor(m => m.Habilitado).Width(120);
    })
    .ShowBorders(true)
    .RowAlternationEnabled(false)
    .ShowColumnLines(true)
    .ShowRowLines(true)
    .Paging(paging => paging.PageSize(20))
    .FilterRow(f => f.Visible(true))
    .HeaderFilter(f => f.Visible(true))
    .SearchPanel(searchPanel => searchPanel.Visible(true))
    .Pager(pager =>{
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new[] {20, 50, 100});
        pager.ShowInfo(true);
    })
    .RemoteOperations(true)
    .Grouping(grouping => grouping.AutoExpandAll(true))
    .GroupPanel(groupPanel => groupPanel
        .EmptyPanelText("Arrastre un encabezado de columna aquí para agrupar por esa columna")
        .Visible(true))
    .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .UseIcons(true)
            .Popup(p => p
                .Title("Tipo Equipo")
                .ShowTitle(true)
                .Width("50%")
                .Height(300)
            )
            .Form(f => f.Items(items => {
                items.AddGroup()
                    .ColCount(2)
                    .ColSpan(2)
                    .Items(groupItems => {
                        groupItems.AddSimpleFor(m => m.TEquipo).ColSpan(2);
                        groupItems.AddSimpleFor(m => m.IdEmp).ColSpan(2);
                        groupItems.AddSimpleFor(m => m.Habilitado);
                    });
            }))
        )
)

