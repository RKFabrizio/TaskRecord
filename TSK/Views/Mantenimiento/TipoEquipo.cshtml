
@{
    ViewData["Title"] = "TipoEquipo";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section PagePreTitle{

    <div class="col">
     <!-- Page pre-title -->
        <div class="page-pretitle">
            Mantenimiento
        </div>
        <h2 class="page-title">
            Tipo Equipos
        </h2>
    </div>

}

@section PageActions{


}

@(Html.DevExtreme().DataGrid<TSK.Models.Entity.TipoEquipo>()
    .DataSource(ds => ds.Mvc()
        .Controller("TipoEquipos")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .Key("IdTeq")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.IdTeq).Caption("ID").Width(50);

        columns.AddFor(m => m.IdArea).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("TipoEquipos").LoadAction("AreasLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );

        columns.AddFor(m => m.TEquipo).Caption("Tipo de Equipo").Width(100);

        columns.AddFor(m => m.Habilitado).Width(100);

    })
    .ShowBorders(true)
    .RowAlternationEnabled(true)
    .ShowRowLines(true)
    .Paging(paging => paging.PageSize(20))
    .FilterRow(f => f.Visible(true))
    .Pager(pager =>
    {
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new[] { 20, 50, 100 });
        pager.ShowInfo(true);
    })
    .AllowColumnReordering(true)
    .Grouping(grouping => grouping.AutoExpandAll(true))
    .SearchPanel(searchPanel => searchPanel.Visible(true))
    .GroupPanel(groupPanel => groupPanel
        .EmptyPanelText("")
        .Visible(true))
    .RemoteOperations(true)
    .Editing(e => e.Mode(GridEditMode.Popup)
        .AllowUpdating(true)
        .AllowAdding(true)
        .UseIcons(true)
        .Popup(p => p
        .Title("Tipo de Equipo")
        .ShowTitle(true)
        .Width("70%")
        .Height(300)
        )
        .Form(f => f.Items(items =>
            {
                items.AddGroup()
                    .ColCount(2)
                    .ColSpan(2)
                    .Items(groupItems =>
                    {
                        groupItems.AddSimpleFor(m => m.IdArea);
                        groupItems.AddSimpleFor(m => m.TEquipo);
                        groupItems.AddSimpleFor(m => m.Habilitado);
                    });
            }))
       )
)