
@{
    ViewData["Title"] = "Componente";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section PagePreTitle{

    <div class="col">
     <!-- Page pre-title -->
        <div class="page-pretitle">
            Mantenimiento
        </div>
        <h2 class="page-title">
            Componente
        </h2>
    </div>

}

@section PageActions{


}


@(Html.DevExtreme().DataGrid<TSK.Models.Entity.Componente>()
    .DataSource(ds => ds.Mvc()
        .Controller("Componente")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .Key("IdCom")
    )
    .Columns(columns => {
        columns.AddFor(m => m.IdCom).Caption("ID").Width(50);
        columns.AddFor(m => m.IdSis).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Componente").LoadAction("SistemasLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).Caption("Sistema").HidingPriority(1);
        columns.AddFor(m => m.Habilitado).Width(120).HidingPriority(0);
    })
    .ShowBorders(true)
    .RowAlternationEnabled(false)
    .ShowColumnLines(true)
    .ShowRowLines(true)
    .Paging(paging => paging.PageSize(20))
    .FilterRow(f => f.Visible(true))
    .HeaderFilter(f => f.Visible(true))
    .Pager(pager =>{
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new[] {20, 50, 100});
        pager.ShowInfo(true);
    })
    .RemoteOperations(true)
    .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .UseIcons(true)
            .Popup(p => p
                .Title("Componente")
                .ShowTitle(true)
                .Width("70%")
                .Height(300)
            )
            
            .Form(f => f.Items(items => {
                items.AddGroup()
                    .ColCount(2)
                    .ColSpan(2)
                    .Items(groupItems => {
                        groupItems.AddSimpleFor(m => m.IdSis);
                        groupItems.AddSimpleFor(m => m.Habilitado);
                    });
            }))
            
        )
)

