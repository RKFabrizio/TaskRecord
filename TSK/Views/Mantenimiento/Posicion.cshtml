
@{
    ViewData["Title"] = "Posiciones";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section PagePreTitle{

    <div class="col">
     <!-- Page pre-title -->
        <div class="page-pretitle">
            Mantenimiento
        </div>
        <h2 class="page-title">
            Posiciones
        </h2>
    </div>

}

@section PageActions{


}

@(Html.DevExtreme().DataGrid<TSK.Models.Entity.Posicion>()
    .DataSource(ds => ds.Mvc()
        .Controller("Posicions")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .Key("IdPos")
    )
    .ShowBorders(true)
    .RowAlternationEnabled(false)
    .ShowColumnLines(true)
    .ShowRowLines(true)
    .Paging(paging => paging.PageSize(50))
    .FilterRow(f => f.Visible(true))
    .HeaderFilter(f => f.Visible(true))
    .Pager(pager =>
    {
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new[] { 50, 100, 150 });
        pager.ShowInfo(true);
    })
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Cargo);

        columns.AddFor(m => m.Habilitado);
    })
    .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .UseIcons(true)
            .Popup(p => p
                .Title("Posicion")
                .ShowTitle(true)
                .Width("70%")
                .Height(230)
            )
            .Form(f => f.Items(items =>
            {
       items.AddGroup()
           .ColCount(2)
           .ColSpan(2)
           .Items(groupItems =>
           {
               groupItems.AddSimpleFor(m => m.IdPos);
               groupItems.AddSimpleFor(m => m.Cargo);
               groupItems.AddSimpleFor(m => m.Habilitado).Label(label => label.Location(FormLabelLocation.Left));
           });
        }))
    )

)
