
@{
    ViewData["Title"] = "Area";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section PagePreTitle{

    <div class="col">
     <!-- Page pre-title -->
        <div class="page-pretitle">
            Mantenimiento
        </div>
        <h2 class="page-title">
            Area
        </h2>
    </div>

}

@section PageActions{


}

@(Html.DevExtreme().DataGrid<TSK.Models.Entity.Area>()
    .DataSource(ds => ds.Mvc()
        .Controller("Areas")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("IdArea")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.IdArea);

        columns.AddFor(m => m.Nombre);

        columns.AddFor(m => m.Habilitado);

        columns.AddFor(m => m.Extracolumn1);

        columns.AddFor(m => m.Extracolumn2);

        columns.AddFor(m => m.Extracolumn3);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)