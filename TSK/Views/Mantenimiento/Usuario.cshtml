
@{
    ViewData["Title"] = "Usuario";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<style>
    .user-icon-container {
        display: flex;
        align-items: center;
    }

    .user-icon-container .icon-tabler {
            margin-right: 10px;
            width: 50px;
            height: 50px;
     }

     .user-icon-container .page-title {
            margin-left: -4px;
     }

     .page-title{
         color: #a79a66;
     }

</style>

@section PagePreTitle{

    <div class="col">
        <!-- Page pre-title -->
        <div class="user-icon-container">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-circle" viewBox="0 0 24 24" stroke-width="1" stroke="#a79a66" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <circle cx="12" cy="12" r="9" />
                <circle cx="12" cy="10" r="3" />
                <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855" />
            </svg>
            <h2 class="page-title">
                Usuario
            </h2>
        </div>
    </div>


}

@section PageActions{


}



    @(Html.DevExtreme().DataGrid<TSK.Models.Entity.Usuario>()
            .ID("grid1")
            .DataSource(ds => ds.Mvc()
                .Controller("UsuariosNew")
                .LoadAction("Get")
                .InsertAction("Post")
                .UpdateAction("Put")
                .Key("IdUsr")
                .Key("IdUsr")
            )
            .Columns(columns =>
            {
                columns.AddFor(m => m.IdPos).Lookup(lookup => lookup
                    .DataSource(ds => ds.WebApi().Controller("UsuariosNew").LoadAction("PosicionsLookup").Key("Value"))
                    .ValueExpr("Value")
                    .DisplayExpr("Text")
                ).GroupIndex(0).Caption("Posición");

                columns.AddFor(m => m.Nombre).Width(500).Caption("Nombre Completo");
                columns.AddFor(m => m.Usuario1).Caption("Usuario").Width(200);
                columns.AddFor(m => m.Contrasena).Caption("Clave");
                columns.AddFor(m => m.Habilitado).Visible(false);
            })
            .ShowBorders(true)
            .AllowColumnReordering(true)
            .OnContentReady("contentReady")
            .RowAlternationEnabled(false)
            .ShowColumnLines(true)
            .ShowRowLines(true)
            .Paging(paging => paging.PageSize(20))
            .FilterRow(f => f.Visible(true))
            .Pager(pager =>
            {
                pager.ShowPageSizeSelector(true);
                pager.AllowedPageSizes(new[] { 20, 50, 100 });
                pager.ShowInfo(true);
            })
            .SearchPanel(s => s
                .Visible(true)
                .HighlightCaseSensitive(true)
            )
            .GroupPanel(g => g.Visible(true))
            .Grouping(g => g.AutoExpandAll(false))
            .RemoteOperations(true)
            .Editing(e => e.Mode(GridEditMode.Popup)
                    .AllowUpdating(true)
                    .AllowAdding(true)
                    .UseIcons(true)
                    .Popup(p => p
                        .Title("Usuario")
                        .ShowTitle(true)
                        .Width("70%")
                        .Height(300)
                    )

                    .Form(f => f.Items(items =>
                    {
                        items.AddGroup()
                            .ColCount(2)
                            .ColSpan(2)
                            .Items(groupItems =>
                            {
                                groupItems.AddSimpleFor(m => m.Nombre).CssClass("myFormMargin");
                                groupItems.AddSimpleFor(m => m.IdPos).CssClass("myFormMargin");
                                groupItems.AddSimpleFor(m => m.Usuario1).CssClass("myFormMargin");
                                groupItems.AddSimpleFor(m => m.Contrasena)
                                    .Editor(e => e.TextBox().Mode(TextBoxMode.Password)).CssClass("myFormMargin");

                                groupItems.AddSimpleFor(m => m.Habilitado).CssClass("myFormMargin").Label(label => label.Location(FormLabelLocation.Left));
                            });
                    }))

                )
               
        )

<script>
    var collapsed = false;
    function contentReady(e) {
        if(!collapsed) {
            collapsed = true;
            e.component.expandRow(["EnviroCare"]);
        }
    }

     function refreshData() {
        var grid = $("#grid1").dxDataGrid("instance");
        grid.refresh();
    }





</script>


