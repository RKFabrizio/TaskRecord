
@{
    ViewData["Title"] = "Actividad";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}


@section PagePreTitle{

    <div class="col">
     <!-- Page pre-title -->
        <div class="page-pretitle">
            Mantenimiento
        </div>
        <h2 class="page-title">
           Actividad
        </h2>
    </div>

}

@section PageActions{

}

@(Html.DevExtreme().DataGrid<TSK.Models.Entity.Actividad>()
    .DataSource(ds => ds.Mvc()
        .Controller("Actividad")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .Key("IdAct")
    )
    .ColumnHidingEnabled(true)
    .Columns(columns => {
        columns.AddFor(m => m.IdAct).Caption("ID").Width(50);
        columns.AddFor(m => m.Titulo).Caption("Título").Width("80%");
         columns.AddFor(m => m.IdRan).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Actividad").LoadAction("RangosLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).Caption("Usar Rangos").HidingPriority(8);
        columns.AddFor(m => m.IdCon).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Actividad").LoadAction("ConsecuenciaLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).Caption("Consecuencia").HidingPriority(7);
        columns.AddFor(m => m.IdClm).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Actividad").LoadAction("ClaseMantencionsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).Caption("Clase Mantención").HidingPriority(6);
        
        columns.AddFor(m => m.IdUm).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Actividad").LoadAction("UnidadMedidaLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).Caption("Unidad Medida").HidingPriority(5);
        columns.AddFor(m => m.IdFrc).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Actividad").LoadAction("FrecuenciaLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        ).Caption("Frecuencia").HidingPriority(4);
        columns.AddFor(m => m.Especificacion).Caption("Especificación").HidingPriority(3);
        columns.AddFor(m => m.Inicio).HidingPriority(2);
        columns.AddFor(m => m.Fin).HidingPriority(1);
        columns.AddFor(m => m.Referencia).Caption("Nombre de Referencia").HidingPriority(0);
        columns.AddFor(m => m.Habilitado).Width(100);


    })
        .ShowBorders(true)
    .RowAlternationEnabled(false)
    .ShowColumnLines(true)
    .ShowRowLines(true)
    .Paging(paging => paging.PageSize(50))
    .FilterRow(f => f.Visible(true))
    .HeaderFilter(f => f.Visible(true))
    .SearchPanel(searchPanel => searchPanel.Visible(true))
    .Pager(pager =>{
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new[] {50, 100, 200});
        pager.ShowInfo(true);
    })
    .RemoteOperations(true)
        .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .UseIcons(true)
            .Popup(p => p
                .Title("Actividad")
                .ShowTitle(true)
                .Width("70%")
                .Height(600)
            )
            .Form(f => f.Items(items => {
                items.AddGroup()
                    .ColCount(2)
                    .ColSpan(2)
                    .Items(groupItems => {
                        groupItems.AddSimpleFor(m => m.Titulo).ColSpan(2);
                        groupItems.AddSimpleFor(m => m.IdCon);
                       
                        groupItems.AddSimpleFor(m => m.IdClm);
                        
                        groupItems.AddSimpleFor(m => m.IdUm);
                        groupItems.AddSimpleFor(m => m.IdFrc);                      
                        groupItems.AddSimpleFor(m => m.Habilitado);
                    });
                    items.AddGroup()
                        .Caption("Referencias")
                        .ColCount(2)
                        .ColSpan(2)
                        .Items(groupItems => {
                            groupItems.AddSimpleFor(m => m.Referencia);
                           groupItems.AddSimpleFor(m => m.ReferenciaUrl);
                           
                    });

                    items.AddGroup()
                    .Caption("Especificaciones")
                    .ColCount(2)
                    .ColSpan(2)
                    .Items(groupItems => {
                        groupItems.AddSimpleFor(m => m.Especificacion).ColSpan(2).Editor(e => e
                            .TextArea()
                            .Height(140)
                        );
                    });
            }))
        )
)

