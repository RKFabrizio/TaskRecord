@using TSK.Models

@{
    ViewData["Title"] = "Bienenida";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}


<h2>Bienvenida DE</h2>


@(Html.DevExtreme().TreeList<TSK.Models.SampleOrder>()
    .DataSource(ds => ds.Mvc()
        .Controller("SampleData")
        .LoadAction("Get")
        .Key("ID")
        .InsertAction("Post")
        .UpdateAction("Put")
    )
    .RootValue(-1)
    .KeyExpr("ID")
    .ParentIdExpr("Head_ID")
    .Columns(columns => {
        columns.Add()
            .DataField("Title")
            .Caption("Position");

        columns.Add().DataField("Full_Name");

        columns.Add().DataField("City");

        columns.Add().DataField("State");

        columns.Add().DataField("Mobile_Phone");

        columns.Add()
            .DataField("Hire_Date")
            .DataType(GridColumnDataType.Date);
    })
    .ShowRowLines(true)
    .ShowBorders(true)
    .ColumnAutoWidth(true)
    .ExpandedRowKeys(new[] { 1 })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
    )
)
